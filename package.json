{
  "name": "ngx-slideshow-demo",
  "version": "0.3.2",
  "scripts": {
    "ng": "ng",
    "publish-lib:patch": "run-s publish-lib:pre npm-ver:patch publish-lib:post npm-ver:done:patch publish-slideshow",
    "publish-lib:minor": "run-s lint build test npm-ver:minor publish-lib:post npm-ver:done:minor publish-slideshow",
    "publish-lib:major": "run-s npm-ver:major lint build test publish-lib:post npm-ver:done:major publish-slideshow",
    "publish-lib:pre": "run-s lint build test",
    "publish-lib:post": "run-s changelog addchanges",
    "publish-slideshow": "npm publish dist/ngx-slideshow",
    "npm-ver:major": "npm --no-git-tag-version version major",
    "npm-ver:minor": "npm --no-git-tag-version version minor",
    "npm-ver:patch": "npm --no-git-tag-version version patch",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -k ./projects/ngx-slideshow/package.json --commit-path ./projects/ngx-slideshow/",
    "addchanges": "git add -A",
    "npm-ver:done:major": "cd projects/ngx-slideshow&&npm version major --force -m \"chore(release): %s\"&& cd ..",
    "npm-ver:done:minor": "cd projects/ngx-slideshow&&npm version minor --force -m \"chore(release): %s\"&& cd ..",
    "npm-ver:done:path": "cd projects/ngx-slideshow&&npm version patch --force -m \"chore(release): %s\"&& cd ..",
    "start": "ng serve",
    "build": "ng build ngx-slideshow",
    "test": "ng test --watch false ngx-slideshow",
    "lint": "ng lint ngx-slideshow",
    "build:demo": "ng build",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.0.1",
    "@angular/common": "^7.0.1",
    "@angular/compiler": "^7.0.1",
    "@angular/core": "^7.0.1",
    "@angular/forms": "^7.0.1",
    "@angular/http": "^7.0.1",
    "@angular/platform-browser": "^7.0.1",
    "@angular/platform-browser-dynamic": "^7.0.1",
    "@angular/router": "^7.0.1",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.3",
    "@angular-devkit/build-ng-packagr": "~0.10.3",
    "@angular/cli": "~7.0.3",
    "@angular/compiler-cli": "^7.0.1",
    "@angular/language-service": "^7.0.1",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@types/jasmine": "~2.8.9",
    "@types/jasminewd2": "~2.0.5",
    "@types/node": "~10.12.1",
    "codelyzer": "~4.5.0",
    "conventional-changelog-cli": "^2.0.5",
    "conventional-github-releaser": "^3.1.2",
    "husky": "^1.1.2",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ng-packagr": "^4.4.0",
    "npm-run-all": "^4.1.3",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tsickle": "0.33.1",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e %HUSKY_GIT_PARAMS%"
    }
  }
}
